{
  "manifest_version": 3,
  "name": "Bible Verse Extractor",
  "version": "1.1",
  "description": "Extract Bible verses from bible.com and save as PostgreSQL-ready CSV with background support",
  "permissions": [
    "activeTab", 
    "downloads", 
    "tabs", 
    "scripting",
    "storage",
    "background"
  ],
  "host_permissions": [
    "https://www.bible.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.bible.com/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "books.json",
        "translations.json",
        "all_books.json",
        "browserversion.json"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}